{
	"name": "MLS Extension",
	"version": "1.0",
	"description": "Extension for keeping track of viewed MLS pages",
	"background": { 
		"page": "background.html"
	},
	"content_scripts": [{
		"matches": ["http://www.realtor.ca/propertyDetails.aspx?*"],
		"js": ["lib/jquery.min.js", "lib/bootstrap.min.js", "propertyDetails.js", "commonutil.js"],
		"all_frames": true
	}, {
		"matches": ["http://www.realtor.ca/map.aspx?*"],
		"js": ["lib/jquery.min.js", "lib/bootstrap.min.js", "map.js", "commonutil.js"],
		"run_at": "document_end"
	}],
	"page_action": {
		"default_icon": "img/icon16.png",
		"default_title": "Mark page",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs"
	],
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	}
}